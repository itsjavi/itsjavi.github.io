---
import NoTransitionsLayout from "@layouts/NoTransitionsLayout.astro";
import LiveEditor from "../components/LiveEditor.astro";

const title = "Live Code Editor for HTML/CSS/JS";
const description = "A live code editor for HTML, CSS, and JavaScript, inspired by CodePen.";
---

<NoTransitionsLayout
  title={title}
  description={description}
  image="/experiments/live-editor.webp"
  sideBarActiveItemID="editor"
>
  <main class="p-6 pt-10">
    <div class="mb-10">
      <h1 class="text-3xl w-full font-bold mb-5">Live Code Editor</h1>
      <div class="divider my-2"></div>
      <p>
        {description} It uses CodeMirror under the hood. Edits are persisted to local storage.
      </p>
      <div class="py-2 text-lg flex flex-wrap gap-2">
        <span class="badge badge-outline">Astro</span>
        <span class="badge badge-outline">TypeScript</span>
      </div>
    </div>
    <LiveEditor
      class="min-h-[500px]"
      initialHtml="<h1>Hello, World!</h1>"
      initialCss="html { color-scheme: dark;}\nbody { font-family: Arial, sans-serif; }"
      initialJs="console.log('Hello from the code editor!');"
      localStorageKey="editor_code"
    />
    <br />
    <a
      class="btn btn-neutral"
      href="https://github.com/itsjavi/itsjavi.github.io/blob/main/src/components/LiveEditor.astro"
      target="_blank"
      rel="noopener noreferrer"
    >
      Get this editor
    </a>
  </main>
</NoTransitionsLayout>
