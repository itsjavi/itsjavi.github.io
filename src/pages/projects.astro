---
import HorizontalCard from "../components/HorizontalCard.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

import { Rocket } from "lucide-astro";
import projects from "../data/projects.json";
---

<BaseLayout title="Projects | Javi Aguilar" sideBarActiveItemID="projects">
  <div>
    <h1 class="text-3xl w-full font-bold mb-5">Projects <Rocket class="inline-block" /></h1>
  </div>

  {
    projects.map((project,index) => (
      <>
        <HorizontalCard
          title={project.title}
        img={project.img}
        desc={project.desc}
        url={`/projects/${project.slug}`}
        badge={project.badge}
      />
     {index < projects.length - 1 && <div class="divider my-0"></div>}
    </>
    ))
  }
</BaseLayout>
